{
  "name": "traversion-vscode",
  "displayName": "Traversion - Time Travel for Code",
  "description": "Travel through time in your code with Traversion. See every version, compare changes, and restore previous states.",
  "version": "1.0.0",
  "publisher": "traversion",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "version control",
    "time travel",
    "history",
    "debugging",
    "traversion"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "traversion.showTimeline",
        "title": "Traversion: Show Timeline",
        "icon": "$(history)"
      },
      {
        "command": "traversion.compareWithPrevious",
        "title": "Traversion: Compare with Previous Version",
        "icon": "$(diff)"
      },
      {
        "command": "traversion.rollbackToVersion",
        "title": "Traversion: Rollback to Version",
        "icon": "$(discard)"
      },
      {
        "command": "traversion.searchByVibe",
        "title": "Traversion: Search by Vibe",
        "icon": "$(search)"
      },
      {
        "command": "traversion.showStats",
        "title": "Traversion: Show Statistics",
        "icon": "$(graph)"
      },
      {
        "command": "traversion.toggleTimeTravel",
        "title": "Traversion: Toggle Time Travel Mode",
        "icon": "$(watch)"
      },
      {
        "command": "traversion.exportHistory",
        "title": "Traversion: Export History",
        "icon": "$(cloud-download)"
      },
      {
        "command": "traversion.showCurrentFileTags",
        "title": "Traversion: Show File Tags",
        "icon": "$(tag)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "traversion.showTimeline",
          "group": "navigation",
          "when": "traversion.enabled"
        },
        {
          "command": "traversion.compareWithPrevious",
          "group": "navigation",
          "when": "traversion.enabled"
        }
      ],
      "editor/context": [
        {
          "command": "traversion.compareWithPrevious",
          "group": "traversion",
          "when": "traversion.enabled"
        },
        {
          "command": "traversion.rollbackToVersion",
          "group": "traversion",
          "when": "traversion.enabled"
        },
        {
          "command": "traversion.showCurrentFileTags",
          "group": "traversion",
          "when": "traversion.enabled"
        }
      ],
      "explorer/context": [
        {
          "command": "traversion.showTimeline",
          "group": "traversion",
          "when": "resourceScheme == file"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "traversion.timeline",
          "name": "Traversion Timeline",
          "icon": "$(history)",
          "contextualTitle": "Traversion Timeline",
          "when": "traversion.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "traversion",
          "title": "Traversion",
          "icon": "media/traversion-icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "traversion.timeline",
        "contents": "No Traversion server detected.\n[Start Traversion](command:traversion.startServer)\n[Connect to Remote](command:traversion.connectRemote)"
      }
    ],
    "configuration": {
      "title": "Traversion",
      "properties": {
        "traversion.serverUrl": {
          "type": "string",
          "default": "http://localhost:3333",
          "description": "URL of the Traversion server"
        },
        "traversion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Traversion extension"
        },
        "traversion.autoTrack": {
          "type": "boolean",
          "default": true,
          "description": "Automatically track file changes"
        },
        "traversion.showInlineAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline version annotations"
        },
        "traversion.timelineLimit": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of versions to show in timeline"
        },
        "traversion.showTags": {
          "type": "boolean",
          "default": true,
          "description": "Show smart tags in timeline"
        }
      }
    },
    "keybindings": [
      {
        "command": "traversion.showTimeline",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t"
      },
      {
        "command": "traversion.compareWithPrevious",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      },
      {
        "command": "traversion.toggleTimeTravel",
        "key": "ctrl+alt+shift+t",
        "mac": "cmd+alt+shift+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0"
  }
}