{
  "name": "traversion",
  "version": "0.1.0",
  "description": "Post-incident code forensics and impact analysis for development teams",
  "main": "index.js",
  "type": "module",
  "bin": {
    "trav": "./src/cli/traversion-cli.js"
  },
  "scripts": {
    "dev": "node src/app.js",
    "start": "node src/app.js",
    "enterprise": "node enterprise-start.js",
    "platform": "node enterprise-start.js",
    "dashboard": "node -e \"import('./src/dashboard/realTimeDashboard.js').then(m => new m.RealTimeDashboard(3340).start())\"",
    "watch": "nodemon src/api/server.js",
    "forensics": "node src/cli/traversion-cli.js forensics",
    "status": "lsof -i :3333",
    "clean": "rm -rf .traversion",
    "incident": "node src/cli/traversion-cli.js incident",
    "analyze": "node src/cli/traversion-cli.js analyze",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest test/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest test/integration",
    "test:auth": "NODE_OPTIONS=--experimental-vm-modules jest test/integration/auth.test.js",
    "test:causality": "NODE_OPTIONS=--experimental-vm-modules jest test/unit/causality.test.js",
    "test:storage": "NODE_OPTIONS=--experimental-vm-modules jest test/unit/storage.test.js",
    "test:legacy": "node test-causality.js",
    "demo:production": "node demo-production.js",
    "health": "curl -f http://localhost:3333/api/timeline || echo 'Traversion not running'",
    "tracker": "node -e \"import('./src/tracking/deploymentTracker.js').then(m => new m.DeploymentTracker().start())\"",
    "rollback": "node -e \"import('./src/automation/rollbackGenerator.js').then(m => console.log('Rollback generator loaded'))\"",
    "feedback": "node -e \"import('./src/learning/feedbackLoop.js').then(m => console.log('Feedback loop system ready'))\"",
    "docs": "node src/docs/swagger-server.js",
    "docs:dev": "nodemon src/docs/swagger-server.js"
  },
  "keywords": [
    "incident-response",
    "code-forensics",
    "debugging",
    "impact-analysis",
    "developer-tools",
    "git-integration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/auth-app": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.0",
    "@slack/events-api": "^3.0.1",
    "@slack/web-api": "^7.0.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "open": "^10.0.0",
    "ora": "^7.0.1",
    "pg": "^8.11.3",
    "simple-git": "^3.20.0",
    "swagger-ui-express": "^5.0.1",
    "tar": "^6.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
