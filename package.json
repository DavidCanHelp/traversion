{
  "name": "traversion",
  "version": "0.1.0",
  "description": "Time machine for vibe coders - traverse through your code versions",
  "main": "index.js",
  "type": "module",
  "bin": {
    "trav": "./src/cli/traversion-cli.js"
  },
  "scripts": {
    "dev": "node src/watcher/index.js",
    "start": "node src/watcher/index.js",
    "watch": "nodemon src/watcher/index.js",
    "stop": "pkill -f \"src/watcher/index.js\"",
    "status": "lsof -i :3333 :3334",
    "clean": "rm -rf .traversion",
    "backup": "cp .traversion/versions.db .traversion/backups/backup_$(date +%Y%m%d_%H%M%S).db",
    "logs": "tail -f .traversion/logs/watcher.log",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest--coverage",
    "test:causality": "node test-causality.js",
    "demo:production": "node demo-production.js",
    "health": "curl -f http://localhost:3333/api/timeline || echo 'Traversion not running'"
  },
  "keywords": [
    "version-control",
    "time-travel",
    "vibe-coding",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "open": "^10.0.0",
    "ora": "^7.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
