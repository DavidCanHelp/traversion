# Traversion Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration (PostgreSQL/TimescaleDB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traversion
DB_USER=traversion
DB_PASSWORD=traversion_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret

# API Configuration
API_PORT=3338
WS_PORT=3339
CORS_ORIGIN=*

# Security & Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=7d
API_KEY_SECRET=your-api-key-secret-change-this-in-production
SESSION_TIMEOUT=30m

# Default Admin User (change after first login)
ADMIN_EMAIL=admin@traversion.local
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator

# Monitoring & Alerting
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=15000

# Email Alerts (SMTP Configuration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=alerts@yourcompany.com
SMTP_PASS=your-app-password
ALERT_FROM_EMAIL=traversion-alerts@yourcompany.com
ALERT_TO_EMAIL=ops@yourcompany.com

# Slack Alerts
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Alerts
PAGERDUTY_KEY=your-pagerduty-integration-key

# Alert Configuration
ALERT_CHECK_INTERVAL=60000
ALERT_COOLDOWN=300000

# Storage Settings
MAX_EVENTS_PER_BATCH=1000
BATCH_FLUSH_INTERVAL=1000
CACHE_TTL=300
DATA_RETENTION_DAYS=90

# Feature Flags
ENABLE_CACHE=true
ENABLE_COMPRESSION=true
ENABLE_METRICS=true

# Node Environment
NODE_ENV=production
LOG_LEVEL=info