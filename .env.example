# Traversion Environment Configuration
# Copy this file to .env and update with your values

# ===== Application Settings =====
NODE_ENV=development
APP_NAME=Traversion
PORT=3335
HOST=0.0.0.0
APP_URL=http://localhost:3335
APP_VERSION=0.1.0

# ===== Database Configuration =====
# Options: sqlite, postgres
DB_TYPE=sqlite
SQLITE_PATH=./.traversion/database.db

# PostgreSQL settings (if DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traversion
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false
DB_MAX_CONNECTIONS=20

# ===== Authentication & Security =====
# CRITICAL: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-in-production
API_KEY_PREFIX=trav_

# ===== Redis Cache (Optional) =====
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=traversion:

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./.traversion/logs
NO_COLOR=false
LOG_JSON=false

# ===== Git Integration =====
GIT_REPO_PATH=.
GIT_MAX_COMMITS=1000
GIT_DEFAULT_BRANCH=main

# ===== Feature Flags =====
FEATURE_REALTIME=true
FEATURE_ANALYTICS=true
FEATURE_EXPORT=true
FEATURE_COLLABORATION=false
FEATURE_ML=false

# ===== Performance Settings =====
MAX_WORKERS=4
ANALYSIS_TIMEOUT=30000
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true

# ===== Storage & Backup =====
DATA_DIR=./.traversion
BACKUP_ENABLED=false
BACKUP_INTERVAL=0 2 * * *
MAX_BACKUPS=30
