{
  "dashboard": {
    "id": null,
    "title": "Traversion Production Overview",
    "tags": ["traversion", "production", "overview"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "pluginVersion": "8.0.0",
        "targets": [
          {
            "expr": "up{job=\"traversion-api\"}",
            "interval": "",
            "legendFormat": "API Server",
            "refId": "A"
          },
          {
            "expr": "up{job=\"traversion-postgres\"}",
            "interval": "",
            "legendFormat": "Database",
            "refId": "B"
          },
          {
            "expr": "up{job=\"traversion-redis\"}",
            "interval": "",
            "legendFormat": "Redis",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Events per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(traversion_events_total[5m])",
            "interval": "",
            "legendFormat": "{{tenant_id}} - {{event_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "legend": {
          "show": true,
          "values": false,
          "min": false,
          "max": false,
          "current": false,
          "total": false,
          "avg": false
        },
        "nullPointMode": "null"
      },
      {
        "id": 3,
        "title": "Active Alerts",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none"
        },
        "targets": [
          {
            "expr": "count by (severity) (ALERTS{alertstate=\"firing\",alertname=~\"traversion.*\"})",
            "interval": "",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(traversion_http_requests_total[5m])",
            "interval": "",
            "legendFormat": "{{method}} {{endpoint}} ({{status_code}})",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 5,
        "title": "Response Time P95",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(traversion_http_request_duration_seconds_bucket[5m]))",
            "interval": "",
            "legendFormat": "P95 {{method}} {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(traversion_http_request_duration_seconds_bucket[5m]))",
            "interval": "",
            "legendFormat": "P50 {{method}} {{endpoint}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "traversion_memory_usage_bytes",
            "interval": "",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "traversion_cpu_usage_percent",
            "interval": "",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "traversion_websocket_connections",
            "interval": "",
            "legendFormat": "{{tenant_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Causality Detections per Minute",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(traversion_causality_detections_total[5m]) * 60",
            "interval": "",
            "legendFormat": "{{tenant_id}} - {{causality_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Detections/min",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 10,
        "title": "Query Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(traversion_query_duration_seconds_bucket[5m]))",
            "interval": "",
            "legendFormat": "P95 {{tenant_id}} {{query_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(traversion_query_duration_seconds_bucket[5m]))",
            "interval": "",
            "legendFormat": "P50 {{tenant_id}} {{query_type}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 11,
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(traversion_events_total{event_type=~\".*error.*|.*exception.*\"}[5m]) / rate(traversion_events_total[5m]) * 100",
            "interval": "",
            "legendFormat": "{{service_id}} error rate %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate %",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 12,
        "title": "Database Connection Pool",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "traversion_storage_connections_active",
            "interval": "",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "traversion_storage_connections_idle",
            "interval": "",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "tenant",
          "type": "query",
          "query": "label_values(traversion_events_total, tenant_id)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(traversion_events_total{tenant_id=~\"$tenant\"}, service_id)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(traversion_uptime_seconds[5m]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "Application restarted"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "expr": "ALERTS{alertname=~\"traversion.*\"}",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{severity}}: {{description}}"
        }
      ]
    }
  }
}